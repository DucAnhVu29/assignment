   <body>
      <%- include('../partials/navbar.ejs') %>
         <main class="bd-docs-main">
            <section class="hero bd-hero bd-is-basic has-background-primary my-5">
               <div class="hero-body">
                  <div class="container">
                     <div class="bd-hero-body">
                        <div class="bd-hero-heading">
                           <h1 class="title algolia-lvl0">
                              <p>Nation Details</p>
                           </h1>
                        </div>
                     </div>
                  </div>
               </div>
            </section>
            <div class="container">
               <div class="">
                  <div class="columns">
                     <!-- <div class="column box mx-3 mb-5">
                        <div class="panel-block media pt-5 pb-5">
                           <div class="media-content">
                              <p class="title is-4">
                                 <%= nation.name %>
                              </p>
                              <p class="sub-title">
                                 <%= description %>
                              </p>
                           </div>

                        </div>
                        <% if(error_msg !=null ){ %>
                           <%= error_msg %>
                              <% } %>
                                 <% if(session.admin==true) {%>
                                    <div class="is-flex is-justify-content-end mt-5">
