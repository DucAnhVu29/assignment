<% if (players.length> 0) { %>
   <% players.forEach(player=> { %>
      <a class="column is-one-third" href="/players/<%= player.id %>">
         <div class="box">
            <div class="card-image">
               <figure class="image is-3by4">
                  <img src="<%= player.imageUrl %>" alt="<%= player.name %>">
               </figure>
            </div>
            <div class="card-content">
               <div class="media">
                  <div class="media-content">
                     <p class="title is-4">
                        <%= player.name %>
                           <% if (player.isCaptain) { %>
                              <span class="icon">
                                 <i class="fa-solid fa-crown has-text-warning	"></i>
                              </span>
                              <% }%>
                     </p>

                     <p class="subtitle is-6">
                        <%= player.club %>
                     </p>
                  </div>
               </div>
            </div>
         </div>
      </a>
      <% }) %>
         <% } %>